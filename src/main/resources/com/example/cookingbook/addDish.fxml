<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<?import java.net.URL?>
<VBox fx:id="root" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cookingbook.controller.AddDishController">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
    <HBox alignment="CENTER">
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Добавление нового блюда" />
    </HBox>

    <TextField fx:id="nameField" promptText="Название блюда" />
    <TextField fx:id="cookingTimeField" promptText="Время приготовления" />
    <TextArea fx:id="ingredientsArea" promptText="Ингредиенты" />
    <TextArea fx:id="cookingProcessArea" promptText="Процесс приготовления" />
    <CheckBox fx:id="favoriteCheckBox" text="Любимое блюдо" />

    <Button onAction="#saveDish" text="Сохранить" />
</VBox>